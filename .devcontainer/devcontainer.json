{
  "name": "Devcontainer Packer",
  "image": "hashicorp/packer:full-1.12.0-alpha1",
  "onCreateCommand": "apk update; apk add powershell;",

	"containerEnv": {
		"IS_DEVCONTAINER": "true"
	},
  "remoteUser": "root",
  "customizations": {
  "vscode": {
      "extensions": [
        "4ops.packer",
        "codezombiech.gitignore",
        "L13RARY.l13-diff",
        "hashicorp.hcl",
        "oderwat.indent-rainbow",
        "ryu1kn.partial-diff",
        "esbenp.prettier-vscode",
        "svipas.prettier-plus",
        "mohsen1.prettify-json",
        "mechatroner.rainbow-csv",
        "redhat.vscode-xml",
        "redhat.vscode-yaml",
        "eamodio.gitlens",
        "donjayamanne.githistory",
        "mhutchie.git-graph",
        "vscode-icons-team.vscode-icons",
        "vscodevim.vim",
        "wayou.vscode-todo-highlight",
        "alefragnani.Bookmarks",
        "ms-vscode.powershell",
        "ms-vscode.hexeditor"
      ]
    }
  }
}